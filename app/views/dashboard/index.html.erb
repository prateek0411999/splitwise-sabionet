<div class="container-fluid text-primary mt-4">
    
    <div class="row">
      <div class="col-md-3">
        <h2 class="text-primary mt-0" style="margin-top: 0">Hello, <%= @user.name %></h2>
      </div>
      <div class="col-md-9">
        <div class="card-header">
            <div style="display: flex; justify-content: flex-end;">
              
              <div class="top-bar-actions">
                <%= link_to "Add Expense", new_expense_path, class: "btn btn-primary" %>
                <button class="btn btn-secondary" type="button" disabled>Settle up</button>
              </div>
            </div>
          </div>
      </div>
    </div>
</div>

<div class="container-fluid">
  <div class="row">
    <aside class="col-md-3">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Friends List</h5>
          <div class="list-group">
            <% @users.each do |user| %>
              <%= link_to "#{user.name}", dashboard_path(user.id), class: "list-group-item list-group-item-action" if user.id != @user.id %>
            <% end %>
          </div>
        </div>
      </div>
    </aside>
    <div class="col-md-9">
      <div class="card">
        <div class="card-body">
          <%= render partial: "shared/expenses/list_expenses", locals: {total_balance: @total_balance, total_owing: @total_owing, total_owed: @total_owed, friends_who_owe: @friends_who_owe,  friends_i_owe: @friends_i_owe, user: @user, current_user: @user, activity: @complete_activity}%>
        </div>
      </div>
    </div>
  </div>
</div>